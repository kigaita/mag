<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>Panel użytkownika</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        
        <div class="panel panel-default">
            <div class="panel-heading">
                Drużyny użytkownika

                <div class="btn-group" role="group" aria-label="...">
                    @Html.ActionLink("Dodaj", "Add", "Team", null, new { @class = "btn btn-default" })
                    <button type="button" class="btn btn-default">Edytuj</button>
                    <button type="button" class="btn btn-default">Usuń</button>
                </div>

            </div>
            <div class="panel-body">
                <table id="teams" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Nazwa
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                Id 
                            </th>
                            <th>
                                Nazwa
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Drużyny do których użytkownik należy

                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-default">Zapisz się</button>
                    <button type="button" class="btn btn-default">Wyjdź z drużyny</button>
                </div>

            </div>
            <div class="panel-body">
                Tutaj drużyny
            </div>
        </div>
    </div>
</div>

@section head
{
    <link href="~/Content/datatables.min.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Features/User/Index.js"></script>
}
