@model UwbItContest.Web.Features.Team.Add.Command

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Dodawanie drużyny</h2>
        </div>
    </div>
</div>

@using (Html.BeginForm("Add", "Team", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.TeamName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TeamName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CanAddTeamMembersImmidiately, new { @class = "col-md-2 control-label" })
        <div class="col-md-3">
            <div class="checkbox pull-right">
                @Html.CheckBoxFor(m => m.CanAddTeamMembersImmidiately)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Dodaj" />
        </div>    
    </div>

}